#!/usr/bin/env node --max-old-space-size=4096
require('babel-register');
var yargs = require('yargs');
var fs = require('fs');
var fsTreeUtils = require('../src/cli-utils/fsTreeUtils');
var fsSpeciesGeoUtils = require('../src/cli-utils/fsSpeciesGeoUtils');
var moment = require('moment');

var argv = yargs
  .usage('Usage: $0 <command> [options]')
  .command('count <input_tree>', 'Count the number of nodes in the tree')
  .example('$0 count tree.nwk')
  .command('names <input_tree> <output_names>', 'Print the names of leaf nodes in the tree')
  .example('$0 names tree.nwk names.txt')
  .command('count-intersection <input_tree> <input_species> <name_column>', 'Count the number of nodes that co-occur in <input_tree> and <input_species>')
  .example('$0 count-intersection tree.nwk species.tsv name')
  .command('print-intersection <input_tree> <input_species> <name_column> <output_tree>', 'Prune <input_tree> to species in <input_species> and write to <output_tree>')
  .example('$0 print-intersection tree.nwk species.tsv name intersection.nwk')
  .command('normalize-tree-species-names <input_tree> <output_tree>', 'Normalize names in <input_tree> and write new tree to <output_tree>')
  .example('$0 normalize-tree-species-names tree.nwk tree-normalized.nwk')
  .command('normalize-geo-species-names <input_species> <name_column> <output_species>', 'Normalize names in <input_species> and write new species distribution to <output_species>')
  .example('$0 normalize-geo-species-names species.csv species species-normalized.csv')
  .help('h')
  .alias('h', 'help')
  .argv;
  
var startDate = new Date();

function onEnd(res) {
  var diff = moment().diff(startDate);
  console.log(`Ended in ${moment.duration(diff).humanize()}`);
  if (res)
    console.log(`Result: ${res}`);
}

function onError(err) {
  console.log("Error:", err);
}

switch (argv._[0]) {
  case 'count':
    fsTreeUtils.countNodes(argv.input_tree).then(onEnd).catch(onError);
    break;
  case 'names':
    fsTreeUtils.printNames(argv.input_tree, argv.output_names).then(onEnd).catch(onError);
    break;
  case 'count-intersection':
    fsTreeUtils.countIntersection(argv.input_tree, argv.input_species, argv.name_column)
      .then(onEnd).catch(onError);
    break;
  case 'print-intersection':
    fsTreeUtils.printIntersection(argv.input_tree, argv.input_species, argv.name_column, argv.output_tree)
      .then(onEnd).catch(onError);
    break;
  case 'normalize-tree-species-names':
    fsTreeUtils.normalizeNames(argv.input_tree, argv.output_tree)
      .then(onEnd).catch(onError);
    break;
  case 'normalize-geo-species-names':
    fsSpeciesGeoUtils.copyWithNormalizedNames(argv.input_species, argv.name_column, argv.output_species)
      .then(onEnd).catch(onError);
    break;
  default:
    console.log('Missing command. Run with -h for help.');
}
